class Solution {
    public String longestCommonPrefix(String[] strs) {
        if (strs == null || strs.length == 0) {
            return "";
        }

        // Take the first string as a reference
        for (int i = 0; i < strs[0].length(); i++) {
            char c = strs[0].charAt(i);

            for (int j = 1; j < strs.length; j++) {
                // If index exceeds current string OR mismatch occurs
                if (i == strs[j].length() || strs[j].charAt(i) != c) {
                    return strs[0].substring(0, i);
                }
            }
        }

        // Whole first string is the common prefix
        return strs[0];
    }

    // Example test
    public static void main(String[] args) {
        Solution sol = new Solution();

        System.out.println(sol.longestCommonPrefix(new String[]{"flower","flow","flight"})); // fl
        System.out.println(sol.longestCommonPrefix(new String[]{"dog","racecar","car"}));    // ""
        System.out.println(sol.longestCommonPrefix(new String[]{"same","same"}));            // same
        System.out.println(sol.longestCommonPrefix(new String[]{"","abc"}));                 // ""
    }
}
